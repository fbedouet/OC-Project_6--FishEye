{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "never"],
    	"prefer-const": ["error", {"destructuring": "any", "ignoreReadBeforeAssign": false}],
	    "eqeqeq": "error",
	    "func-style":"off",
	    "camelcase":"error",
	    "no-redeclare":"error",
	    "require-await":"error"
    }
}
